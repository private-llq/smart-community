<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.jsy.community.mapper.ComplainsMapper">


    <select id="listAll" resultMap="ComplainMap">
        select c.id,c.type,c.content,c.complain_time,c.images,c.status,u.uid,u.mobile,u.real_name name,c.feedback
         from t_complain c join t_user u on c.uid=u.uid
    </select>
    <resultMap id="ComplainMap" type="com.jsy.community.vo.ComplainVO">
        <result property="id" column="id"/>
        <result property="type" column="type"/>
        <result property="content" column="content"/>
        <result property="complainTime" column="complain_time"/>
        <result property="images" column="images"/>
        <result property="status" column="status"/>
        <result property="mobile" column="mobile"/>
        <result property="uid" column="uid"/>
        <result property="name" column="name"/>
        <result property="feedback" column="feedback"/>
    </resultMap>
</mapper>