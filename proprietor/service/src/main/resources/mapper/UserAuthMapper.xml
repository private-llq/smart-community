<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.jsy.community.mapper.UserAuthMapper">
	<select id="queryUserByField" resultType="com.jsy.community.entity.UserAuthEntity">
		select * from t_user_auth ua where ${field} = #{account}
	</select>
	
	<select id="queryUserIdByMobile" resultType="java.lang.Long">
		select uid from t_user_auth ua where ua.mobile = #{mobile}
	</select>
</mapper>